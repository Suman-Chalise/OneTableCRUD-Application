@model IEnumerable<Categories>

@{
	ViewData["Title"] = "Index";
}
<partial name="_notification" />



<div class="cintainer p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="primary">Category List</h2>
		</div>
		<div class="col-6  text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp Create new Category</a>
		</div>

	</div>

</div>
<br /> <br />

<table class="table table-bordered table-striped">

	<thead>
		<tr>
			<th>Display Order</th>
			<th>Category Name</th>
			<th>Category Description</th>
			<th>Action</th>
			
			
		</tr>
	</thead>
	<tbody>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.DisplayOrder</td>
				<td>@item.CategoryName</td>
				<td>@item.CategoryDescription</td>
				<td>
					<div role="group">
						<a asp-controller="category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary"><i class="bi bi-pencil-square"></i> &nbsp Edit</a>
						<a asp-controller="category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger"><i class="bi bi-trash"></i>&nbspDelete</a>
					</div>
				</td>
			
			</tr>

		}
	
	</tbody>


</table>

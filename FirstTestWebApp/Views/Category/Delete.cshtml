@model Categories

<form method="post">

	@* <input type="hidden" asp-for="CategoryId"/> *@

	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
			<hr />
		</div>


		<div class="mb-3">
			<label asp-for="CreatedDateTime"></label>
			<input asp-for="CreatedDateTime" disabled class="form-control" />
			
		</div>


		<div class="mb-3">
			<label asp-for="CategoryName"></label>
			<input asp-for="CategoryName" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="CategoryDescription"></label>
			<input asp-for="CategoryDescription" disabled class="form-control" />
			
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" disabled class="form-control" />
		
		</div>

	@* 	<button type="submit" asp-action="DeletePost" asp-route-id="@Model.CategoryId" class="btn btn-danger">Delete</button> *@
		<button type="submit" asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">Delete</button>
		<a asp-controller="category" asp-action="Index" class="btn btn-secondary"> Back to List </a>

	</div>

</form>

@* // script below is for client side validation and the page will not refresh  *@
@section Scripts {
	@{
		<partial name="_validationScriptsPartial" />
	}
}